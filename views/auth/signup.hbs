{{#each errors}}
<div class="alert alert-warning" role="alert">
	{{this.msg}}
</div>
{{/each}}

{{#if todo_error}}
	{{todo_error}}
{{/if}}

<div class="col">
	<form action="/auth/signup" method="POST">
		{{!-- Nombre --}}
		<div class="form-group">
			<label for="name" class="form-label">Nombre</label>
			<input
				type="text"
				class="form-control"
				id="name"
				name="name"
				placeholder="Ingrese su nombre"
				value={{name}}
			>
		</div>

		{{!-- Correo --}}
		<div class="form-group">
			<label for="email" class="form-label">Correo Electrónico</label>
			<input
				type="email"
				class="form-control"
				id="email"
				name="email"
				placeholder="Ingrese su correo electronico"
				value={{email}}
			>
		</div>

		{{!-- Password --}}
		<div class="form-group">
			<label for="password" class="form-label">Contraseña</label>
			<input type="password" class="form-control" id="password" name="password" placeholder="Ingrese su contraseña">
		</div>

		{{!-- Confirm Password --}}
		<div class="form-group">
			<label for="confirm_password" class="form-label">Contraseña (repetir)</label>
			<input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Ingrese repita su contraseña">
		</div>

		<button class="btn btn-primary">
			Registrarse
		</button>
	</form>
</div>